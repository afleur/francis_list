<div class="container">
  <div class="row">
    <% unless @course.photo_url.nil? %>
      <%= cl_image_tag @course.photo, height: 250, width: 360, crop: :fill %>
    <% end %>
    <h1> <%= @course.name %> </h1>
    <p><%= @course.studio %> </p>
    <p>Coach: <%= @course.coach %></p>
  </div>
</div>


  <%= @course.full_address %>
  <div class="desc">
    <%= @course.description %>
  </div>



  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
